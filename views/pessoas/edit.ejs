<%- include('../partials/header.ejs') %>

     <h1>Nova Pessoa</h1>

     <p>
       <a href="/pessoas">Voltar para lista de pessoas</a>
     </p>

     <form method="POST" >
        <div  class="form-group">
          <label for="nome" >Nome</label>
          <input 
            type="text" 
            class="form-control" 
            id="nome" 
            name="nome" 
            value="<%= pessoa.nome %>"
            placeholder="Digite seu nome" 
          />
        </div>

        <div  class="form-group">
          <label for="nome" >Nascimento</label>
          <input 
            type="text" 
            class="form-control" 
            id="nascimento" 
            name="nascimento" 
            value="<%= pessoa.nascimento %>"
            placeholder="Informe a sua data de nascimento" 
          />
        </div>

        <div  class="form-group">
          <label for="nome" >Cargo</label>
          <input 
            type="text" 
            class="form-control" 
            id="cargo" 
            name="cargo" 
            value="<%= pessoa.cargo %>"
            placeholder="Inform seu cargo" 
          />
        </div>

        <button type="submit" class="btn btn-default">Salvar</button>
     </form>

